{
  "compilerOptions": {
      "allowJs": true,
      "checkJs": true,
      "declaration": true,
      "target": "esnext",
      "module": "esnext",
      "sourceMap": true,
      "experimentalDecorators": true,
      "jsx": "react-native",
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "strict": false,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {},
      "outDir": "./lib",
      "lib": ["es6"],
  },
  "include": ["src"],
  "exclude": [
    "node_modules", "**/__tests__/*"
  ]
}
